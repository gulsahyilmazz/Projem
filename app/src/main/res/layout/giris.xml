<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/kumsal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Girişi"
        android:textColor="#3F51B5"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
         />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Kullanıcı Adı"
            android:layout_below="@id/textView5"
            android:textColor="#A70202"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/kullaniciadi"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-4dp"
            android:layout_toRightOf="@id/textView"
            android:ems="10"
            android:hint="Adınızı Giriniz"
            android:inputType="textCapSentences|textAutoCorrect"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:text="Şifre"
            android:textColor="#A70202"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/sifre"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/kullaniciadi"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/textView2"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sifre"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#FCC8C8"
            android:text="Giriş Yap"
            android:textColor="#000000"
            android:textSize="24sp" />



    </RelativeLayout></androidx.constraintlayout.widget.ConstraintLayout>